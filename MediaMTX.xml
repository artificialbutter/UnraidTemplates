<?xml version="1.0"?>
<Container version="2">
  <Name>MediaMTX</Name>
  <Repository>aler9/rtsp-simple-server</Repository>
  <Registry>https://hub.docker.com/r/aler9/rtsp-simple-server/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/aler9/mediamtx</Project>
  <Overview>Also known as rtsp-simple-server. Ready-to-use RTSP / RTMP / LL-HLS / WebRTC server and proxy that allows to read, publish and proxy video and audio streams.</Overview>
  <Category>GameServers: Network:Proxy</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://i.imgur.com/0tTu0he.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1683181717</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires>Host mode is required for UDP support.</Requires>
  <Config Name="MediaMTX Protocols" Target="MTX_PROTOCOLS" Default="tcp" Mode="" Description="Required to operate in a bridge network, remove if using a host network." Type="Variable" Display="always" Required="false" Mask="false">tcp</Config>
  <Config Name="RTSP" Target="8554" Default="8554" Mode="tcp" Description="Port for RTSP traffic" Type="Port" Display="always" Required="false" Mask="false">8554</Config>
  <Config Name="RTMP" Target="1935" Default="1935" Mode="tcp" Description="Port for RTMP traffic" Type="Port" Display="always" Required="false" Mask="false">1935</Config>
  <Config Name="HLS" Target="8888" Default="8888" Mode="tcp" Description="Port for HLS traffic" Type="Port" Display="always" Required="false" Mask="false">8888</Config>
  <Config Name="WebRTC" Target="8889" Default="8889" Mode="tcp" Description="Port for WebRTC traffic" Type="Port" Display="always" Required="false" Mask="false">8889</Config>
</Container>